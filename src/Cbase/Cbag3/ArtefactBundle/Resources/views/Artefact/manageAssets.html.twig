{% extends '::base.html.twig' %}

{% block page_header %}
    <div class="page-header">
        <h1>{% block headline %}CBAG3: Edit Asset{% endblock headline %}</h1>
    </div>
{% endblock page_header %}

{% block content %}
    <div class="span9">

        <form novalidate action="{{ path('artefact_save_asset', {'slug': slug})}}" method="post">
            <ul id="navigation">
                {% for item in assets %}
                    <li><input type="checkbox" name="asset[]" value="{{ item.id }}"
                    {% if item.id in selectedAssets %}checked="checked"{% endif %}>  {{ item.description }}</li>
                {% endfor %}
            </ul>
            <input type="submit">
        </form>

    </div>
    <div class="span3">
        {% block content_sidebar %}
            <h3>Actions</h3>
            <ul>
                <li><a href="{{ path('artefact_show', {'slug': slug})}}">back to the artefact</a></li>
            </ul>
        {% endblock content_sidebar %}
    </div>
{% endblock content %}