{% extends '::base.html.twig' %}

{% block page_header %}
<div class="page-header">
    <h1>{% block headline %}CBAG3: {{artefact.name}}{% endblock headline %}</h1>
</div>
{% endblock page_header %}

{% block content %}
<div class="span9">

    <p>{{artefact.description | markdown}}</p>
    <ul class="unstyled">
        {% for artefactAsset in artefact.assets %}
            <li><img src="{{asset(artefactAsset.webPath)}}" alt="" /></li>
        {% endfor %}
    </ul>

</div>
<div class="span3">
    {% block content_sidebar %}
    <h3>actionen</h3>
    <ul class="unstyled">
        <li><a href="{{ path('artefact_edit', {'slug': artefact.slug})}}">artefact bearbeiten</a></li>
        <li><a href="{{ path('artefact_manage_asset', {'slug': artefact.slug}) }}">2d scans bearbeiten</a></li>
