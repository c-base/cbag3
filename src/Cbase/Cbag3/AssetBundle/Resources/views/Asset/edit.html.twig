{% extends '::base.html.twig' %}

{% from 'MopaBootstrapBundle::icons.html.twig' import icon %}

{% block page_header %}
    <div class="page-header">
        <h1>{% block headline %}2d scan ummodelieren{% endblock headline %}</h1>
    </div>
{% endblock page_header %}

{% block content %}
    <div class="span9">
        <form novalidate action="{{ path('asset_update', {'id': id})}}" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}

            <button type="submit" class="btn">c_peichern</button>
        </form>
        <img class="img-polaroid" src="{{ asset(asset.webPath) | imagine_filter('asset_show', true)}}" alt="{{ asset.description }}" title="{{ asset.description }}" />
    </div>
    <div class="span3">
        {% block content_sidebar %}
            <h3>artefacte</h3>
            {% for artefact in artefacts %}
            <span class="artefact">
                <a href="{{ path('artefact_show', {'slug': artefact.slug}) }}">{{ artefact.name}}</a> <a href="{{ path('asset_delete_from_artefact', {'id': asset.id, 'slug': artefact.slug}) }}">{{ icon('remove-circle') }}</a>
            </span>
            {% endfor %}
            <h3>actionen</h3>
            <ul class="unstyled">
                <li><a href="{{ path('asset_delete', {'id': asset.id} )}}">grafic löschen</a></li>
                <li><a href="{{ path('asset_index')}}">zurück zu den graficen</a></li>
                <li><a href="{{ path('artefact_index')}}">zu den artefacten</a></li>
            </ul>
        {% endblock content_sidebar %}
    </div>
{% endblock content %}