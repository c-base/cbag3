{% extends '::base.html.twig' %}

{% from 'MopaBootstrapBundle::icons.html.twig' import icon %}

{% block page_header %}
<div class="page-header">
    <h1>{% block headline %}grafic_e darstellungen{% endblock headline %}</h1>
</div>
{% endblock page_header %}

{% block content %}
<div class="span9">
    <div class="row-fluid">
        {% for asset in assets %}
        <div class="span2">
            <a href="{{ path('asset_edit', {'id': asset.id} )}}">
                <img class="img-polaroid" src="{{ asset(asset.webPath) | imagine_filter('my_thumb', true)}}" alt="{{ asset.description }}" title="{{ asset.description }}" />
            </a>
            <a href="{{ path('asset_delete', {'id': asset.id} )}}">{{ icon('remove-circle') }}delete</a>
        </div>
        {% endfor %}
    </div>
</div>
<div class="span3">
    {% block content_sidebar %}
    <h3>Actions</h3>
    <ul class="unstyled">
        <li><a href="{{ path('asset_create')}}">neuen 2d scan hochladen</a></li>
    </ul>
    {% endblock content_sidebar %}
</div>
{% endblock content %}